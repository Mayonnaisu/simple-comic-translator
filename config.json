{
  "IMAGE_MERGE": {
    "enable": true
  },

  "DETECTION": {
    "confidence_threshold": 0.3,
    "merge_threshold": 0,
    "merge_times": 2,
    "tile": {
      "width": "original",
      "height": "tile_width",
      "overlap": 0.5
    }
  },

  "OCR": {
    "source_language": "korean",
    "confidence_threshold": 0.5,
    "upscale": {
      "enable": false,
      "ratio": 2
    }
  },

  "IMAGE_SPLIT": {
    "max_height": 2000
  },

  "TRANSLATION": {
    "target_language": "en",
    "max_retries": 3,
    "retry_delay": 30,
    "gemini": {
      "model": "gemini-2.5-flash",
      "temperature": 0.5,
      "top_p": 0.8,
      "max_output_tokens": 999999999
    },
    "memory": {
      "enable": false,
      "overwrite": false,
      "path": "input"
    },
    "glossary_path": "input"
  },

  "OVERLAY": {
    "box": {
      "offset": 10,
      "padding": 10,
      "fill_color": "white",
      "outline_color": null,
      "outline_thickness": 1
    },
    "font": {
      "min_size": 11,
      "max_size": 40,
      "color": "black",
      "path": "fonts/NotoSerifKR-Bold.ttf"
    }
  }
}