{
  "IMAGE_MERGE": {
    "enable": true
  },

  "DETECTION": {
    "confidence_threshold": 0.3,
    "merge_threshold": 0.1,
    "tile": {
      "width": "original",
      "height": "tile_width",
      "overlap": 0.2
    }
  },

  "OCR": {
    "source_language": "korean",
    "confidence_threshold": 0.5,
    "upscale": {
      "enable": false,
      "ratio": 2
    }
  },

  "IMAGE_SPLIT": {
    "max_height": 2000
  },

  "TRANSLATION": {
    "target_language": "en",
    "gemini": {
      "model": "gemini-2.5-flash",
      "temperature": 0.5,
      "top_p": 0.8
    } 
  },

  "OVERLAY": {
    "box": {
      "offset": 10,
      "fill_color": "white",
      "outline_color": null
    },
    "font": {
      "min_size": 11,
      "max_size": 40,
      "color": "black",
      "path": "fonts/NotoSerifKR-Bold.ttf"
    }
  }
}